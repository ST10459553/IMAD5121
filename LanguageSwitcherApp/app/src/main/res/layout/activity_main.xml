<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D5B8B8"
        android:backgroundTint="#F8E3BE"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/WelcomeTv"
            android:layout_width="281dp"
            android:layout_height="121dp"
            android:fontFamily="@font/roboto"
            android:textAlignment="center"
            android:textColor="#6A5858"
            android:textSize="30sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.45" />

        <Button
            android:id="@+id/clickMeBtn"
            android:layout_width="126dp"
            android:layout_height="65dp"
            android:layout_marginStart="155dp"
            android:layout_marginEnd="154dp"
            android:backgroundTint="#D84F4F"
            android:fontFamily="@font/roboto"
            android:text="Click Me"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/WelcomeTv"
            app:layout_constraintVertical_bias="0.727" />

        <EditText
            android:id="@+id/nameInput"
            android:layout_width="232dp"
            android:layout_height="56dp"
            android:layout_marginStart="89dp"
            android:layout_marginTop="94dp"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="158dp"
            android:ems="10"
            android:hint="Insert Name"
            android:inputType="text"
            app:layout_constraintBottom_toTopOf="@+id/WelcomeTv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Switch
            android:id="@+id/swtichFr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="144dp"
            android:layout_marginEnd="159dp"
            android:text="French"
            app:layout_constraintBottom_toTopOf="@+id/WelcomeTv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameInput" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/WelcomeTv"
        android:layout_width="281dp"
        android:layout_height="121dp"
        android:fontFamily="@font/roboto"
        android:textAlignment="center"
        android:textColor="#6A5858"
        android:textSize="30sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <Button
        android:id="@+id/clickMeBtn"
        android:layout_width="126dp"
        android:layout_height="65dp"
        android:layout_marginStart="155dp"
        android:layout_marginEnd="154dp"
        android:backgroundTint="#D84F4F"
        android:fontFamily="@font/roboto"
        android:text="Click Me"
        android:textSize="16sp"
        app:circularflow_defaultRadius="2dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WelcomeTv"
        app:layout_constraintVertical_bias="0.727" />

    <EditText
        android:id="@+id/nameInput"
        android:layout_width="232dp"
        android:layout_height="56dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="158dp"
        android:ems="10"
        android:hint="Insert Name"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/WelcomeTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>