<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5B8B8"
    android:backgroundTint="#F8E3BE"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/WelcomeTv"
        android:layout_width="316dp"
        android:layout_height="229dp"
        android:fontFamily="@font/roboto"
        android:textAlignment="center"
        android:textColor="#6A5858"
        android:textSize="30sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.533" />

    <Button
        android:id="@+id/clickMeBtn"
        android:layout_width="126dp"
        android:layout_height="65dp"
        android:layout_marginStart="155dp"
        android:layout_marginEnd="154dp"
        android:backgroundTint="#D84F4F"
        android:fontFamily="@font/roboto"
        android:text="Click Me"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WelcomeTv"
        app:layout_constraintVertical_bias="0.727" />

    <EditText
        android:id="@+id/nameInput"
        android:layout_width="232dp"
        android:layout_height="56dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="158dp"
        android:ems="10"
        android:hint="Insert Name"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/WelcomeTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switchFr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="147dp"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="175dp"
        android:layout_marginBottom="33dp"
        android:text="French"
        app:layout_constraintBottom_toTopOf="@+id/WelcomeTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameInput"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/languageSpinner"
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="21dp"
        app:layout_constraintBottom_toTopOf="@+id/switchFr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameInput" />

</androidx.constraintlayout.widget.ConstraintLayout>